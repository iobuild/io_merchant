<%= render 'carts/cart_header' %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">

      <h3>请先设置收货地址</h3>


      <% @addresses.each do |address| %>
      <div class="form-group"> 
        <% if address.is_default %>
        使用当前地址: 
        <% end %>
        
        <%= address.province %>
        <%= address.city %>
        <%= address.sub_city %>
        <%= address.street %>
        

      </div>
      <% end %>


      <div class="form-group"> 
        <a href="/addresses/new" class="btn btn-primary">
          重新选择其它地址
        </a>

      </div>

      <div class="form-group"> 
        <a href="/orders" class="btn btn-success">
          下一步
        </a>
      </div>


    </div>
  </div>
</div>



