<%= render 'carts/cart_header' %>

<div class="container-fluid">
  <div class="row">

    <% cart.cart_items.each do |item| %>
      <div class="col-md-6">
        <input type="checkbox" name="items[]" class="selected" value="<%= item.id %>" />
        <%= item.sellable.title %>
        <table class="table cart-list">
          <tr>
            <td width='30%'>
              <img src="/<%= item.sellable.title %>.jpg"  width="100px" height="100px" />
            </td>
            <td width='70%'>
              <p>单价: <%= item.sellable.price %> </p>
              <p>
              数量: 
              <span class='quantity'>
                <a rel="nofollow" href="#" class="increase-quantity" data-id='<%= item.id %>'>-</a>
                <span class='quantity-<%= item.id %>'><%= item.quantity %></span>
                <a rel="nofollow" href="#" class="decrease-quantity" data-id='<%= item.id %>'>+</a>
              </span>
              </p>

              <p>
                <a class="btn btn-default remove-cart-item" data-id="<%= item.id %>" href="#">
                删除
              </a>
              </p>
            </td>
          </tr>
        </table>
        
            
        

      </div>
    <% end %>

    

    


  </div>

  <div class="row">
    <% if cart.cart_items.length > 0 %>
    <div class="col-md-12" role="alert">
      <span class='pull-left'>
        
        <input type="checkbox" name="select-all" class="select-all" /> 全选 
        <a href="#" class="remove-selected">删除</a>
        
      </span>

      <span class='pull-right'>
        总计: <%= cart.amount %>
        <a href="/addresses" class="btn btn-default">结算</a>

      </span>

    </div>
    <% end %>
  </div>
</div>
